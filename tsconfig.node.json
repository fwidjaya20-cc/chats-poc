{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@shadcn": [
        "./src/shared/Components/Shadcn"
      ],
      "@shadcn/*": [
        "./src/shared/Components/Shadcn/*"
      ],
      "@tools": [
        "./src/shared/Tools"
      ],
      "@tools/*": [
        "./src/shared/Tools/*"
      ]
    },
    "target": "ES2022",
    "lib": [
      "ES2023"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "vite.config.ts"
  ]
}